generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid()) @db.Uuid
  name          String
  email         String
  phone         String?
  storages      Storage[]
  StorageHost   StorageHost? @relation(fields: [storageHostId], references: [id])
  storageHostId String?      @db.Uuid
}

model Storage {
  id            String       @id @default(uuid()) @db.Uuid
  image         String
  latitude      String
  longitude     String
  price         Int
  description   String
  size          Int
  startDate     DateTime
  endDate       DateTime
  accessType    String
  storageHost   StorageHost? @relation(fields: [storageHostId], references: [id])
  storageHostId String?      @db.Uuid
  User          User?        @relation(fields: [userId], references: [id])
  userId        String?      @db.Uuid
}

model StorageHost {
  id      String    @id @default(uuid()) @db.Uuid
  Storage Storage[]
  users   User[]
}
